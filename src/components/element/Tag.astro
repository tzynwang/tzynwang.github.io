---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
const tagUrl = `/tag/${tag}`;
---

<a class="tag" href={tagUrl}>
  <slot />
</a>

<style scoped>
  .tag {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 2px 8px;
    font-size: 14px;
    font-weight: 400;
    text-decoration: none;
    background-color: #8aa6a3;
    color: #fff;
    transition: background-color 0.2s ease-in-out;
  }

  .tag:not(:last-of-type) {
    margin-right: 8px;
  }

  .tag:hover {
    background-color: #127369;
  }
</style>
