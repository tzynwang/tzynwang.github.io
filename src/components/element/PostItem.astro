---
import Tag from '@Components/element/Tag.astro';
import { GA4_READ_POST } from '@Models/GeneralModels';
import { dateFormatter } from '@Tools/formatter';
import type { MarkdownInstance, Post } from '@Models/GeneralTypes';

interface Props {
  post: MarkdownInstance<Post>;
}

const { post } = Astro.props;
---

<li class="post-wrapper">
  <a href={post.url} class={GA4_READ_POST}>{post.frontmatter.title}</a>
  <div>{dateFormatter(post.frontmatter.date)}</div>
  <div>
    {post.frontmatter.tag.map((tag) => <Tag tag={tag}>{tag}</Tag>)}
  </div>
</li>

<style scoped>
  .post-wrapper {
    display: flex;
    flex-direction: column;
    gap: 4px;
    list-style-type: none;
    container-type: inline-size;
  }
</style>
