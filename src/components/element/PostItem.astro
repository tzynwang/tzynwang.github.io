---
import Tag from '@Components/element/Tag.astro';
import { dateFormatter } from '@Tools/formatter';
import type { MarkdownInstance, Post } from '@Models/GeneralTypes';

interface Props {
  post: MarkdownInstance<Post>;
}

const { post } = Astro.props;
---

<li class="post-wrapper">
  <a href={post.url}>{post.frontmatter.title}</a>
  <div>{dateFormatter(post.frontmatter.date)}</div>
  <div class="tag-container">
    {post.frontmatter.tag.map((tag) => <Tag tag={tag}>{tag}</Tag>)}
  </div>
</li>

<style scoped>
  .post-wrapper {
    display: flex;
    flex-direction: column;
    gap: 4px;
    list-style-type: none;
    container-type: inline-size;
  }

  .tag-container {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  @container (min-width: 480px) {
    .tag-container {
      gap: 16px;
    }
  }
</style>
